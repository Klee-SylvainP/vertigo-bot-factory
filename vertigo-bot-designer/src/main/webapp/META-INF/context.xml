<?xml version='1.0' encoding='utf-8'?>
<Context debug="0" reloadable="false" allowCasualMultipartParsing="true">
	<Resource name="jdbc/DataSource"
		auth="SERVLET"
		type="javax.sql.DataSource"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://localhost:5432/chatbot"
		username="chatbot"
		password="chatbot" />
		
		<Resource name="jdbc/DataSourceHome"
		auth="SERVLET"
		type="javax.sql.DataSource"
		driverClassName="org.h2.Driver"
		url="jdbc:h2:~/chatbotFactory/chatbotDb;AUTO_SERVER=TRUE" />
		
	<Parameter name="devMode" value="true" override="false"/>
</Context>